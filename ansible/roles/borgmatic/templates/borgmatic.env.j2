# Environment file for borgmatic service
# This file contains sensitive credentials - keep permissions at 0600

# 1Password service account authentication
OP_SERVICE_ACCOUNT_TOKEN={{ BACKUP_OP_SERVICE_ACCOUNT_TOKEN }}

# 1Password SSH key reference
OP_SSH_KEY_REFERENCE={{ BACKUP_OP_SSH_KEY_REFERENCE }}

# Add user's local bin to PATH
PATH={{ ansible_env.HOME }}/.local/bin:/usr/local/bin:/usr/bin:/bin
